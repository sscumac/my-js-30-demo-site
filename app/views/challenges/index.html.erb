<div class="main-header">My JavaScript 30</div>

<div class="search-wrapper"></div>

 <div class="cards-container">
    <% @challenges.each do |challenge| %>
      <%= link_to challenge_path(challenge) do %>
        <div class="challenge-card">
          <div class="card-image-holder">
             <%= image_tag("card-images/#{challenge.number}.jpg") rescue nil  %> <%# rescue nil: doesnt crash when there is no image  %>
          </div>
          <div class="card-info">
            <div class="card-number">
              0<%= challenge.number %>
            </div>
            <div class="card-name">
              <%= challenge.name %>
            </div>
          </div>
        </div>
      <% end %> 
    <% end %>
  </div>