<div class="page">

  <div class="main-header">My Vanilla JavaScript 30</div>

  <div class="search-wrapper">
    <input type="text" class="search-field" placeholder="search">
    <%= image_tag("search.png", size: "20") %>
  </div>

  <div class="cards-container">
      <% @challenges.each do |challenge| %>
        <%= link_to challenge_path(challenge), class: "card-link" do %>
          <div class="challenge-card">
            <div class="card-image-holder">
              <%= image_tag("card-images/#{challenge.number}.jpg") rescue nil  %> <%# rescue nil: doesnt crash when there is no image  %>
            </div>
            <div class="card-info">
              <div class="card-number">
                <% if challenge.number < 10 %>
                  0<%= challenge.number %>
                <% else %>
                  <%= challenge.number %>
                <% end %>
              </div>
              <div class="card-name">
                <%= challenge.name %>
              </div>
            </div>
          </div>
        <% end %> 
      <% end %>
    <div id="white-space"></div>
  </div>


    <div class="footer">
      <%= inline_svg_tag "information.svg", size: "25", class: "info" %>
    
